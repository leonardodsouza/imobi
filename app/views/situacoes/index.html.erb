<div class="container">
    <div class="page-header">
        <%= link_to 'New Situacao', new_situacao_path, class: "btn btn btn-primary" %>
      </div>
    <div class="panel panel-default">
        <div class="panel-body">

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @situacoes.each do |situacao| %>
      <tr>
        <td><%= situacao.nome %></td>
        <td><%= link_to 'Show', situacao %></td>
        <td><%= link_to 'Edit', edit_situacao_path(situacao) %></td>
        <td><%= link_to 'Destroy', situacao, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
        </div>
      </div>
    </div>