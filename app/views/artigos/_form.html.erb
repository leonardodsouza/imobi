<%= form_with(model: artigo, local: true) do |form| %>
  <% if artigo.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-danger" role="alert">
        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
        <span class="sr-only"></span>   
        <% if artigo.errors.count > 1%> 
          Corrija os erros
        <% else %>
          Corrija o erro
        <% end %>
      </div>  
      <ul>
      <% artigo.errors.full_messages.each do |message| %>
        <li class="text-danger"><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :foto %>
    <%= form.file_field :foto, id: :artigo_foto, required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :titulo %>
    <%= form.text_field :titulo, id: :artigo_titulo, required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :texto %>
    <%= form.cktext_area :texto, id: :artigo_texto, required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :autor %>
    <%= form.text_field :autor, id: :artigo_autor, required: true, class: "form-control" %>
    <span class="help-block">Todos os campos são obrigatórios</span>
  </div>

  <div class="form-group">
    <%= form.submit class: "btn btn btn-primary" %>
    <%= link_to 'Cancelar', artigos_path, class: "btn btn btn-default" %>
  </div>
<% end %>
