 <div class="form-group">
    <%= form.label :legenda %>
    <%= form.text_field :legenda, id: :destaque_legenda, class: "form-control" %>
  </div>

 <div class="form-group">
    <%= form.label :url %>
    <%= form.text_field :url, id: :destaque_url, class: "form-control" %>
  </div>

 <div class="form-group">
    <%= form.label :foto %>
    <%= form.file_field :foto, id: :destaque_foto, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit class: "btn btn btn-primary" %>
