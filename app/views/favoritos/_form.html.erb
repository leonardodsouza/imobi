<%= form_with(model: favorito, remote: true) do |form| %>
  <div class="modal-body">
    <div class="form-group">
      <%= form.hidden_field :imovel_id, id: :favorito_imovel_id, required: true, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= form.label :nome %>
        <%= form.text_field :nome, id: :favorito_nome, value: cookies[:nome], required: true, class: "form-control" %>
      </div>
    <div class="form-group">
      <%= form.label :email %>
      <%= form.text_field :email, id: :favorito_email, value: cookies[:email], required: true, class: "form-control" %>
      <span class="help-block">Todos os campos são obrigatórios</span>
    </div>
  </div>

  <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
      <%= form.submit 'Salvar', class: "btn btn-primary" %>
  </div>

<% end %>