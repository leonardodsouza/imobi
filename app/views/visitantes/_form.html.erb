<%= form_with(model: visitante, remote: true) do |form| %>
 
    <div class="form-group">
      <%= form.text_field :nome, id: :visitante_nome, required: true, placeholder: "Nome", class: "form-control input-lg" %>
    </div>

    <div class="form-group">
      <%= form.text_field :email, id: :visitante_email,required: true, placeholder: "E-mail" , class: "form-control input-lg" %>
    </div>

    <div class="form-group">
        <%= form.submit 'Visitar', class: "btn btn btn-primary btn-lg" %>
    </div>

<% end %>