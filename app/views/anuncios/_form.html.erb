<div class="modal-body">
  <%= form_with(model: anuncio, remote: true) do |form| %>
    <% if anuncio.errors.any? %>
      <div id="error_explanation">
        <div class="alert alert-danger" role="alert">
          <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
          <span class="sr-only"></span>   
          <% if anuncio.errors.count > 1 %> 
            Corrija os erros
          <% else %>
            Corrija o erro
          <% end %>
        </div>  
        <ul>
        <% anuncio.errors.full_messages.each do |message| %>
          <li class="text-danger"><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :nome %>
      <%= form.text_field :nome, id: :anuncio_nome, required: true, class: "form-control"  %>
    </div>

    <div class="form-group">
      <%= form.label :email %>
      <%= form.text_field :email, id: :anuncio_email, required: true, class: "form-control"  %>
    </div>

    <div class="form-group">
      <%= form.label :telefone %>
      <%= form.text_field :telefone, id: :anuncio_telefone, required: true, class: "form-control"  %>
    </div>

    <div class="form-group">
      <%= form.label :cidade %>
      <%= form.text_field :cidade, id: :anuncio_cidade, required: true, class: "form-control"  %>
    </div>

    <div class="form-group">
      <%= form.label :bairro %>
      <%= form.text_field :bairro, id: :anuncio_bairro, required: true, class: "form-control"  %>
    </div>

    <div class="form-group">
      <%= form.label :categoria_id %>
      <%= form.collection_select(:categoria, Categoria.all.order(:nome), :nome, :nome, {prompt: "Selecine a categoria"}, {required: true, class: "form-control" }) %>
    </div>

    <div class="form-group">
      <%= form.label :tipo_id %>
      <%= form.collection_select(:tipo, Tipo.all.order(:nome), :nome, :nome, {prompt: "Selecione o tipo de imóvel"}, {required: true, class: "form-control" }) %>
    </div>

    <div class="form-group">
      <%= form.label :dormitorios %>
      <%= form.select :dormitorios ,[1,2,3,4,5,6,7,8], {prompt: "Nº de dormitorios"},{ required: true, class: "form-control" } %>
    </div>

    <div class="form-group">
      <%= form.label :banheiros %>
      <%= form.select :banheiros ,[1,2,3,4,5,6,7,8], {prompt: "Nº de banheiros"},{ required: true, class: "form-control" } %>
    </div>

    <div class="form-group">
      <%= form.label :garagem %>
      <%= form.select :garagem ,[1,2,3,4,5,6,7,8], {prompt: "Nº de vagas na garagem"},{ required: true, class: "form-control" } %>    
    </div>

    <div class="form-group">
      <%= form.label :area %>
      <%= form.number_field :area, id: :anuncio_area, required: true, class: "form-control"  %>
    </div>

    <div class="form-group">
      <%= form.label :valor %>
      <%= form.number_field :valor, id: :anuncio_valor, required: true, class: "form-control"  %>
    </div>

    <div class="form-group">
      <%= form.label :descricao %>
      <%= form.text_area :descricao, id: :anuncio_descricao, required: true, class: "form-control"  %>
      <span class="help-block">Todos os campos são obrigatórios</span>
    </div>

    <div class="form-group">
      <%= form.submit class: "btn btn btn-primary" %>
      <% link_to 'Cancelar', anuncios_path, class: "btn btn btn-default" %>
    </div>
  <% end %>
</div>