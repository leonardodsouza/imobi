<%= form_with(model: proprietario, local: true) do |form| %>

  <div class="form-group">
    <%= form.hidden_field :imovel_id, id: :proprietario_imovel_id, value: @imovel.id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :nome %>
    <%= form.text_field :nome, id: :proprietario_nome, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :telefone %>
    <%= form.text_field :telefone, id: :proprietario_telefone, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, id: :proprietario_email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :nascimento %>
    <%= form.date_select :nascimento, id: :proprietario_nascimento, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :endereco %>
    <%= form.text_field :endereco, id: :proprietario_endereco, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :profissao %>
    <%= form.text_field :profissao, id: :proprietario_profissao, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :estado_civil %>
    <%= form.select :estado_civil ,[["Solteiro", "Solteiro"],["Casado", "Casado"]], {prompt: "Selecione"},{ required: true, class: "form-control" } %>
    
  </div>

  <div class="form-group">
    <%= form.label :conjuge %>
    <%= form.text_field :conjuge, id: :proprietario_conjuge, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit class: "btn btn btn-primary" %>
    <% if @imprimir == 'sim' %>
      <%= link_to 'Visualizar', @proprietario, class: "btn btn btn-default" %>
    <%end%>
  </div>
<% end %>
