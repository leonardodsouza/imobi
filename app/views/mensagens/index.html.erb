<div class="container">
    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table">
        <thead>
          <tr>
            <th>Visualizado</th>
            <th>Imovel</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Telefone</th>
            <th colspan="2"></th>
          </tr>
        </thead>

        <tbody>
          <% @mensagens.each do |mensagem| %>
            <tr>
              <td><%= mensagem.visualizado %></td>
              <td><%= link_to mensagem.imovel.tipo.nome, imovel_path(mensagem.imovel) %></td>
              <td><%= mensagem.nome %></td>
              <td><%= mensagem.email %></td>
              <td><%= mensagem.telefone %></td>
              <td><%= mensagem.created_at.strftime("%d/%m/%Y")%></td>
              <td><%= link_to 'Visualizar', mensagem, class: "btn btn btn-default", remote: true %></td>
            </tr>
          <% end %>
        </tbody>
        </table>
    </div>
  </div>
</div>